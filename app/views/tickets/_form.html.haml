= form_for @ticket, :html => { :class => "form-horizontal" } do |f|
  -if @ticket.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"

      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :category_id, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.collection_select :category_id, Category.order(:title),:id,:title, include_blank: true, :class => 'form-control', :style => ''
  .form-group
    = f.label :question, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :question, :class => 'form-control', :style => 'width:550px;height:150px;'
  .form-group
    = f.label :name, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, :class => 'form-control', :style => 'width:250px;'
  .form-group
    = f.label :email, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :email, :class => 'form-control', :style => 'width:250px;'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => 'btn btn-primary'
