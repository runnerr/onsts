.page-header
  = link_to new_ticket_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Ticket
  %h1 Listing tickets

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Category
        %th Question
        %th Name
        %th Email
        %th
        %th
        %th

    %tbody
      - @tickets.each do |ticket|
        %tr
          %td= ticket.category.title
          %td= ticket.question
          %td= ticket.name
          %td= ticket.email
          %td= ticket.status_id
          %td= link_to 'Show', ticket
          %td= link_to 'Edit', edit_ticket_path(ticket)
          %td= link_to 'Destroy', ticket, :data => { confirm: 'Are you sure?' }, :method => :delete
