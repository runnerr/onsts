.page-header
  = link_to new_category_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Category
  %h1 Listing categories

.table-responsive
  %table.table.table-striped.table-bordered.table-condensed.table-hover
    %thead
      %tr
        %th #
        %th Title
        %th Action

    %tbody
      - @categories.each_with_index do |category,i|
        %tr
          %td= i+1
          %td= link_to category.title, edit_category_path(category)  
          %td= link_to 'Destroy', category, :data => { confirm: 'Are you sure?' }, :method => :delete
